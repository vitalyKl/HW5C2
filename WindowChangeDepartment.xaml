<Window x:Class="HW5C2.WindowChangeDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW5C2"
        mc:Ignorable="d"
        Title="WindowChangeDepartment" Height="217" Width="353" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-6">
        <TextBlock x:Name="TxtBlckDepartmentName" HorizontalAlignment="Center" Height="20" Margin="0,30,0,0" Text="Название отдела" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" FontSize="16"/>
        <TextBox x:Name="TxtBoxDepartmentName" HorizontalAlignment="Center" Height="19" Margin="0,56,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="166"/>
        <Button x:Name="BtnApply" Content="Применить" Margin="10,114,223,0" Click="BtnApply_Click" Height="37" VerticalAlignment="Top"/>
        <Button x:Name="BtnDiscard" Content="Отмена" Margin="223,114,10,0" Height="37" VerticalAlignment="Top"/>
        <CheckBox x:Name="ChckIsDelitable" Content="Можно удалять" HorizontalAlignment="Center" Width="132" Margin="0,90,0,75"/>

    </Grid>
</Window>
