<Window x:Name="WndAddDepartment" x:Class="HW5C2.WindowAddDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW5C2"
        mc:Ignorable="d"
        Title="Добавление отдела" Height="182" Width="254" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-6">
        <TextBlock HorizontalAlignment="Center" Margin="0,26,0,0" Text="Название отдела" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="15"/>
        <TextBox x:Name="TxtBoxDepartmentName" HorizontalAlignment="Center" Height="30" Margin="0,52,0,0" Text="Введите название" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" FontSize="16"/>
        <Button x:Name="BtnApply" Content="Добавить" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="86" Click="BtnApply_Click" Margin="24,101,0,0"/>
        <Button x:Name="BtnDiscard" Content="Отмена" Height="21" Margin="144,101,24,0" VerticalAlignment="Top" Click="BtnDiscard_Click"/>

    </Grid>
</Window>
